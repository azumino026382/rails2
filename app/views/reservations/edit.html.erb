<%= form_with model: @reservation, url: edit_confirm_reservation _url(@reservation ), local: true do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
    <%= f.submit "予約する" %>
  <% end %>
  

<div class="FormWrapper">
  <section class="FormContainer">
    <h2>再予約する</h2>

    <div class="ReservationDetails">
      <img class="ReservationDetails__image" src="/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png">

      <div class="ReservationDetails__title">
        <span class="ReservationDetails__room-name">
          <%= room.name %>
        </span>

        <span class="ReservationDetails__room-price">
          <%= "¥#{room.price}" %>
        </span>
      </div>

      <span class="ReservationDetails__room-address">
        <%= room.address %>
      </span>

      <span class="Room__stars">
        <img alt="スターアイコン" src="/assets/room/star-1544f5d9e9846039b88b7afca69bdd007b6a36405fbbbfaf4e1faba106f5a0b4.svg">
        <img alt="スターアイコン" src="/assets/room/star-1544f5d9e9846039b88b7afca69bdd007b6a36405fbbbfaf4e1faba106f5a0b4.svg">
        <img alt="スターアイコン" src="/assets/room/star-1544f5d9e9846039b88b7afca69bdd007b6a36405fbbbfaf4e1faba106f5a0b4.svg">
        <img alt="スターアイコン" src="/assets/room/star-1544f5d9e9846039b88b7afca69bdd007b6a36405fbbbfaf4e1faba106f5a0b4.svg">
        <img alt="スターアイコン" src="/assets/room/star-1544f5d9e9846039b88b7afca69bdd007b6a36405fbbbfaf4e1faba106f5a0b4.svg">
      </span>

      <p class="ReservationDetails__room-content">
        <%= room.content %>
      </p>
    </div>

    <%= form_with model: @reservation, url: edit_confirm_reservation _url(@reservation ), local: true do |f| %>
