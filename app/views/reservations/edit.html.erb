      <input type="hidden" name="reservation[room_id]" id="reservation_room_id" value="10">

      <div class="ReservationsForm__input-group">
        <%= f.label :start_date %>
        <%= f.text_field :start_date %>
          <label class="form-label ReservationsForm__label Form__label--required" for="reservation_start_date">チェックイン</label>

          <input value="2023/04/28" class="form-control js-picker" placeholder="---- / -- / --" type="text" name="reservation[start_date]" id="reservation_start_date" data-dtp="dtp_OYcat">
        
      </div>

      <div class="ReservationsForm__input-group">
        <%= f.label :end_date %>
        <%= f.text_field :end_date %>  
          <label class="form-label ReservationsForm__label Form__label--required" for="reservation_end_date">チェックアウト</label>

          <input value="2023/04/29" class="form-control js-picker" placeholder="---- / -- / --" type="text" name="reservation[end_date]" id="reservation_end_date" data-dtp="dtp_KXCmm">
        
