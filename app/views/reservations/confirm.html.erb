<div class="FormWrapper">
  <section class="FormContainer">
    <h2>予約内容の確認</h2>
    
     
      <div class="ReservationConfirm__value-group">
        <p class="ReservationConfirm__label">チェックイン</p>
        <p class="ReservationConfirm__value"><%= @reservation.start_date %></p>
      </div>

      <div class="ReservationConfirm__value-group">
        <p class="ReservationConfirm__label">チェックアウト</p>
        <p class="ReservationConfirm__value"><%= @reservation.end_date %></p>
      </div>

      <div class="ReservationConfirm__value-group">
        <p class="ReservationConfirm__label">日数</p>
        <p class="ReservationConfirm__value"><%= "#{@reservation.days}日" %></p>
      </div>

      <div class="ReservationConfirm__value-group">
        <p class="ReservationConfirm__label">人数</p>
        <p class="ReservationConfirm__value"><%= "#{@reservation.person_num}人" %></p>
      </div>

      <div class="ReservationConfirm__value-group">
        <p class="ReservationConfirm__label">お支払い金額</p>
        <p class="ReservationConfirm__value ReservationConfirm__value--price"><%= "¥#{@reservation.total_price} %></p>
      </div>

      
      
    
    <%= form_with model: @reservation do |form| %>  
      <%= form.hidden_field :room_id, value:params[:room_id], class:'ReservationConfirm__value' %>
      <%= form.hidden_field :user_id, value:current_user.id, class:'ReservationConfirm__value' %>
      <%= form.hidden_field :start_date, value:@reservation.start_date, class:'ReservationConfirm__value' %>
      <%= form.hidden_field :end_date, value:@reservation.end_date, class:'ReservationConfirm__value' %>
      <%= form.hidden_field :days, value:@reservation.days, class:'ReservationConfirm__value' %>
      <%= form.hidden_field :person_num, value:@reservation.person_num, class:'ReservationConfirm__value' %>
      <%= form.hidden_field :total_price, value:@total_price, class:'ReservationConfirm__value' %>
      <%= form.submit '予約を確定'%>
      <%= form.submit '修正' name: :back %>

              
    <% end %>
    <%= link_to 'キャンセル', room_path %>
    
  </section>
</div>